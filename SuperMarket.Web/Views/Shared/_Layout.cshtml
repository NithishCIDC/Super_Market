<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - SuperMarket.Web</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/SuperMarket.Web.styles.css" asp-append-version="true" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="https://cdn.datatables.net/2.1.6/css/dataTables.dataTables.css" />
</head>
<body>
	<header>
		<nav class="bg-white mb-3 border-bottom shadow pb-3">
			<div class="container-fluid d-flex">
				<div class="d-flex">
					<img src="/images/logo.png" alt="Logo" width="80">
					<div class="d-flex flex-column justify-content-end">
						<h2 class="m-0" style="color:#F9821C;font-family:Pacifico,cursive;font-weight: 400;" asp-area="Admin" asp-controller="Product" asp-action="Index">
							Super Market
						</h2>
						<p class="m-0 mt-1 text-end"><strong>Grocery <span style="color:#F9821C">run</span>, let's get it <span style="color:#F9821C">done!</span></strong></p>
					</div>
				</div>
				<div class=" flex-fill text-end me-4">
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main">
			@RenderBody()
		</main>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://cdn.datatables.net/2.1.6/js/dataTables.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
